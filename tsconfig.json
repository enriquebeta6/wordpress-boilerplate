{
  "compilerOptions": {
    "noEmitOnError": false,
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "react", "react-dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "target": "es2017",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["./src/typings/*.d.ts", "./src/**/*.tsx", "./src/**/*.ts"],
}
